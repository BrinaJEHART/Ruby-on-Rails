<div style="margin-top: 40px;">
<% @posts.each do |post| %>

<div style="width:50%!important; margin:auto; margin-top:15px; background-color: white" class="ui card">
  <div class="content">
    <div class="right floated meta" style="color:black!important; font-size: 1em!important">14h</div>
    <img class="ui avatar image" style="color:black!important; font-size:1.1em!important"
    src="https://i2.wp.com/aumentada.net/wp-content/uploads/2015/05/user.png?ssl=1"> <%= post.user.name %>
  </div>
  <div class="image">
    <img
      onclick="window.location='/posts/<%= post.id %>'"
      src="<%= post.attachment %>" 
      style="height: 550px !important;"
    />
  </div>
  <div class="content" style="color:black!important; font-size:1.1em!important">
    <span class="right floated">
      <i class="heart outline like icon"></i>
      17 likes
    </span>
    <%= post.opis %>
  </div>
</div>
<% end %>
</div>





