<div class="align_content">
</div>
<h2 class="center-alignment" style="color:white;">Sign up</h2>

<p id="notice" class="notice"><%= notice %></p>
<style>
body{
  font-family: 'Raleway', sans-serif !important;
}
.new_user {
  background-color: #eeeeee88;
}

.align_content{
  margin-top: 220px;
}

label{
  color: black !important;
}


</style>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div style="background: transparent;" class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
      <div class="column">
        <div class="ui form">
          <div class="field">
            <label>Name</label>
            <div class="ui left icon input">
            <%= f.text_field :name %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <label>Email</label>
            <div class="ui left icon input">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              <i class="at icon"></i>
            </div>
          </div>
          <div class="field">
            <label>Password</label>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <div class="ui left icon input">
            <%= f.password_field :password, autocomplete: "new-password" %>
            <i class="lock icon"></i>
            <% end %><br>    
            
            </div>
          </div>
          <div class="field">
            <label>Password Confirmation</label>
            <div class="ui left icon input">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.submit "Sign up", class:"ui blue submit button actions full-width" %>  
          <%= link_to "Already have an account?", new_session_path(resource_name), class:"center-alignment" %>
          <p id="alert" class="alert center-alignment" style="color: #2185d0 !important; font-weight: bold;"><%= alert %></p>
          <style>

          .full-width { width: 100% !important }

          .center-alignment{
            display:flex;
            justify-content: center;
            align-items: center;
          }
          </style>
        </div>      
      </div>
      <div class="middle aligned column">
        <div class="ui big button">
          <i class="signup icon"></i>
          <span style="color: #2185d0 !important;" class="ui item"><%= link_to "Sign in", new_session_path(resource_name) %></span>
        </div>
        <br>
        <button class="ui facebook button" style="width: 250px; height: 45px">
          <i aria-hidden="true" class="facebook icon"></i>
          Facebook
        </button>
        <br>
        <button class="ui google plus button" style="width: 250px; height: 45px">
          <i aria-hidden="true" class="google icon"></i>
          Sign up with Google
        </button>
      </div>
    </div>
    <div class="ui vertical divider">
      Or
    </div>
  </div>
  <% end %>
