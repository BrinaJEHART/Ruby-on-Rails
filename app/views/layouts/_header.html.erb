
<% if user_signed_in? %>
<div class="ui secondary menu" style="border-bottom: solid gray 1px; padding-bottom: 5px !important; background-color: #808080 !important;">
<%= link_to('Home',root_path, class:"item active")%>
<div class="right menu">
  <div class="item">
    <div class="ui icon input">
      <input type="text" id="searcher" placeholder="Search...">
      <i onclick="window.location='/?search='+$(`#searcher`).val()" class="search link icon"></i>
    </div>
  </div>

<div id="menu-button" class="ui labeled icon top right pointing dropdown button" style="margin: 5px 15px 0px 0px;">
<i class="bars icon"></i>
  <span class="text" style="padding-top: 4px;">Menu</span>
  <div id="menu"class="menu">
    <div class="ui search icon input">
      <i class="search icon"></i>
      <input type="text" name="search" placeholder="Search issues...">
    </div>
    <div class="divider"></div>
    <div class="header">
    <i class="user icon"></i>
      Profile
    </div>
    <div class="item">
      <div class="ui red empty circular label"></div>
      <a href="/profile">You</a>
    </div>
    <div class="divider"></div>
    <div class="header">
    <i class="camera icon"></i>
    Share your moment
    </div>
    <div class="item">
      <div class="ui blue empty circular label"></div>
      <%= link_to 'Post a picture', new_post_path %>
    </div>
    <div class="divider"></div>
    <div class="header">
      <i class="address book icon"></i>
      Friends
    </div>
    <div class="item">
      <div class="ui green empty circular label"></div>
      <%= link_to 'Your friends', friends_path %>
    </div>
    <div class="divider"></div>
    <div class="header">
      <i class="calendar icon"></i>
      Settings
      <i class="angle down icon"></i>
    </div>
    <div class="item">
      <i class="yellow circle icon"></i>
      This Week
    </div>
    <div class="item">
      <i class="violet circle icon"></i>
      This Month
    </div>
    <div class="item">
      <i class="orange circle icon"></i>
      This Year
    </div>
    <div class="divider"></div>
    <div class="header">
    <i class="power off icon"></i>
    <%= link_to('Logout', destroy_user_session_path, method: :delete) %> 
    </div>
  </div>
</div>
</div>
</div>
<% else %>

<div class="ui secondary menu" style="border-bottom: solid gray 1px; padding-bottom: 5px;">
  <%= link_to('Home',root_path, class:"item active")%>
  <%= link_to 'Post a picture', new_post_path, class:"item" %>
  <div class="right menu">
    <div class="item">
      <div class="ui icon input">
        <input type="text" id="searcher" placeholder="Search...">
      <i onclick="window.location='/?search='+$(`#searcher`).val()" class="search link icon"></i>
      </div>
    </div>
    <%= link_to('Sign in', new_user_session_path, class:"ui item") %>        
    <%= link_to('Sign up', new_user_registration_path, class:"ui item") %>
  </div>
</div>
<% end %>

<!-- rails generate controller Profile -->
<script>$('.ui.dropdown').dropdown();</script>
<script>
  $(".item").click(function() {
      window.event.toElement.children[1].click();
      return;
    });
</script>